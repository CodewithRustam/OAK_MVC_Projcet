
@{
    ViewBag.Title = "PostList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model List<Data_Transfer_Layer.PostDataTransfer>
<section class="content-header">
    <h1>Post List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Post</a></li>
        <li class="breadcrumb-item"><a>Post List</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/Post/AddPost'">Add Post</button>
</div>

<!-- /.card -->

<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead class="text-center">
                <tr>
                    <th>Title</th>
                    <th>Category Name</th>
                    <th>Add Date</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody class="text-center">
                    <tr id="a_@item.ID">
                        <td>@item.Title</td>
                        <td>@item.CategoryName</td>
                        <td>@item.AddDate.ToString("dd.MM.yyyy, dddd")</td>

                        <td align="center" valign="middle">
                            <a href="/Admin/Post/UpdatePost?ID=@item.ID">
                                <br />
                                <i class="fa-solid fa-repeat h3" style="color: #23d1ce;"></i>
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <br />
                                <i class="fa-solid fa-circle-xmark h3" style="color: #cf0c0c;" onclick="AskQuestion('/Admin/Post/DeletePost/',@item.ID)"></i>
                            </a>
                        </td>
                    </tr>

                </tbody>
            }
            <tfoot>
                <tr>
                    <th>Title</th>
                    <th>Category Name</th>
                    <th>Add Date</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/_ModalMessage.cshtml")
</div>
<script src="~/Areas/Admin/Content/js/DeleteRecord.js"></script>

