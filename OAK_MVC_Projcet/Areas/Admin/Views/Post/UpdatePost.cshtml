
@{
    ViewBag.Title = "UpdatePost";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Data_Transfer_Layer.PostDataTransfer
<section class="content-header">
    <h1>Update Post</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Post</a></li>
        <li class="breadcrumb-item"><a>Update Post</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <a type="submit" class="btn btn-primary" href="/Admin/Post/PostList">Post List</a>
</div>

<section class="content">
    <div class="row">
        <div class="col-md-9">
            @Html.Partial("~/Areas/Admin/Views/Shared/_MessageForm.cshtml")
            <script src="~/Areas/Admin/Content/js/ckeditor/ckeditor.js"></script>
            <div class="box box-primary">
                @using (Html.BeginForm("UpdatePost", "Post", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.Partial("PartialView/_PostForm")
                }
            </div>
        </div>
    </div>
</section>
