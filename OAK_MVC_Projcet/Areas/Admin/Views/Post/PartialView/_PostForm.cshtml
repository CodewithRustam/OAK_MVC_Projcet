
@model Data_Transfer_Layer.PostDataTransfer
<div class="box-body">
    <div class="form-group">
        <label>Category</label>
        @Html.DropDownList("CategoryID", Model.Categories, "Select Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryID, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Title</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Title" })
        @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Short Content</label>
        @Html.TextBoxFor(x => x.ShortContent, new { @class = "form-control", @placeholder = "Short Content" })
        @Html.ValidationMessageFor(x => x.ShortContent, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Post Content</label>
        @Html.TextAreaFor(x => x.PostContent, new { @class = "ckeditor" })
        @Html.ValidationMessageFor(x => x.PostContent, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Post Image</label>
        <br />
        <input type="file" name="PostImage" accept="image/gif,image/jpg,image/jpeg,image/png" multiple onchange="$('#PostImage')[0].src = window.URL.createObjectURL(this.files[0])" />
        <br />
        <img id="PostImage" width="300" height="200" />
    </div>
    <div class="form-group">
        <label>Tags</label>
        @Html.TextBoxFor(x => x.TagText, new { @class = "form-control", @placeholder = "Please use','for seperate tags" })
    </div>
    <div class="form-group">
        <input type="checkbox" class="form-check-inline" name="Slider" checked="@Model.Slider" value="true" />
        <label class="form-check-label">Slider</label>
    </div>
    <div class="form-group">
        <input type="checkbox" class="form-check-inline" name="Area1" checked="@Model.Area1" value="true" />
        <label class="form-check-label">Area1</label>
    </div>
    <div class="form-group">
        <input type="checkbox" class="form-check-inline" name="Area2" checked="@Model.Area2" value="true" />
        <label class="form-check-label">Area2</label>
    </div>
    <div class="form-group">
        <input type="checkbox" class="form-check-inline" name="Area3" checked="@Model.Area3" value="true" />
        <label class="form-check-label">Area3</label>
    </div>
    <div class="form-group">
        <input type="checkbox" class="form-check-inline" name="Notification" checked="@Model.Notification" value="true" />
        <label class="form-check-label">Notification</label>
    </div>
    <div class="form-group">
        <label>Language</label>
        @Html.TextBoxFor(x => x.Language, new { @class = "form-control", @placeholder = "Language" })
    </div>
    <input type="hidden" value="@Model.ID" name="ID" />
    @if (Model.isUpdate)
    {

        <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PostImages)
                    {
                        <tr id="a_@item.ID">
                            <td>
                                <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" width="60" height="40" />
                            </td>
                            <td align="center" valign="middle">
                                <a href="#" />
                                <br />
                                <i class="fa-solid fa-circle-xmark h3" style="color: #cf0c0c;" onclick="AskQuestion('/Admin/Post/DeletePostImage/',@item.ID)"></i>
                            </td>

                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>Image</th>
                        <th>Delete</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        @Html.Partial("~/Areas/Admin/Views/Shared/_ModalMessage.cshtml")
        <script src="~/Areas/Admin/Content/js/DeleteRecord.js"></script>
     }
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    </div>

