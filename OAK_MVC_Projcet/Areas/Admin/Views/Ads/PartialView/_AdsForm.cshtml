@model Data_Transfer_Layer.AdsDataTranfer

<div class="box-body">
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Link</label>
        @Html.TextBoxFor(x => x.Link, new { @class = "form-control", @placeholder = "Link" })
        @Html.ValidationMessageFor(x => x.Link, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.AdsImage)
        <input type="file" class="form-control-file" name="AdsImage" accept="image/gif, image/jpeg,image/png,image/jpg" onchange="$('#AdsImage')[0].src = window.URL.createObjectURL(this.files[0])" />
        <br />
        @if (Model != null && Model.ImagePath != null)
        {
            <br />
            <img src="~/Areas/Admin/Content/AdsImages/@Model.ImagePath" width="300" height="300" style="border-radius:10px" />
        }
        else
        {
            <img src="" width="300" height="300" id="AdsImage" style="border-radius:10px" />
        }
    </div>
    <div class="form-group">
        <label>Image Size</label>
        @Html.TextBoxFor(x => x.ImageSize, new { @class = "form-control", @placeholder = "Image Size" })
        @Html.ValidationMessageFor(x => x.ImageSize, null, new { @class = "text-danger" })
    </div>
   
    <input type="hidden" name="AdsID" value="@Model.AdsID" />
    <div class="card-footer">
        <button class="btn btn-primary">Save</button>
    </div>
</div>


