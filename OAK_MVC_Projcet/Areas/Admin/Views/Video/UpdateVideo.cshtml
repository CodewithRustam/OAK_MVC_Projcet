
@{
    ViewBag.Title = "UpdateVideo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Data_Transfer_Layer.VideoDataTransfer
<section class="content-header">
    <h1>Update Video</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Video</a></li>
        <li class="breadcrumb-item"><a>Update Video</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <a type="submit" class="btn btn-primary" href="/Admin/Video/VideoList">Video List</a>
</div>

<section class="content">
    <div class="row">
        <div class="col-md-9">
            @Html.Partial("~/Areas/Admin/Views/Shared/_MessageForm.cshtml")
            <div class="box box-primary">
                @using (Html.BeginForm("UpdateVideo", "Video", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.Partial("PartialView/_VideoForm")
                }
            </div>
        </div>
    </div>
</section>
