
@if (ViewBag.processState == Data_Transfer_Layer.General.Message.AddSuccess)
{
    <div class="alert alert-success">
        <strong>Success!! Add Operation is completed successfully</strong>
    </div>
}
else if (ViewBag.processState == Data_Transfer_Layer.General.Message.EmptyArea)
{
    <div class="alert alert-danger">
        <strong>Error!! Please fill the empty area</strong>
    </div>
}
else if (ViewBag.processState == Data_Transfer_Layer.General.Message.UpdateSuccess)
{
    <div class="alert alert-success">
        <strong>Success!! Update Operation completed Successfully</strong>
    </div>
}
else if (ViewBag.processState == Data_Transfer_Layer.General.Message.ImageMissing)
{
    <div class="alert alert-danger">
        <strong>Error!! Please Select an image</strong>
    </div>
}
else if (ViewBag.processState == Data_Transfer_Layer.General.Message.ExtensionError)
{
    <div class="alert alert-danger">
        <strong>Error!! Please Select file with true extension</strong>
    </div>
}
else if (ViewBag.processState == Data_Transfer_Layer.General.Message.GeneralError)
{
    <div class="alert alert-danger">
        <strong>Error!!</strong>
    </div>
}
